#!/bin/sh

# Download evil-mode
git clone --depth 1 https://github.com/emacs-evil/evil.git ~/.local/share/emacs/evil

# Download onedark colorscheme
git clone https://github.com/jonathanchu/atom-one-dark-theme.git ~/.local/share/emacs/onedark

# Download smooth scroll plugin
[[ -f "~/.local/share/emacs/smooth-scroll" ]] || mkdir -p ~/.local/share/emacs/smooth-scroll
curl https://www.emacswiki.org/emacs/download/smooth-scroll.el > ~/.local/share/emacs/smooth-scroll/smooth-scroll.el
