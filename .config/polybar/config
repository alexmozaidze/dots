[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}

black  = ${xrdb:color0}
red    = ${xrdb:color1}
green  = ${xrdb:color2}
yellow = ${xrdb:color3}
blue   = ${xrdb:color4}
purple = ${xrdb:color5}
cyan   = ${xrdb:color6}
white  = ${xrdb:color7}

[bar/bar]
bottom = false
wm-restack = bspwm
enable-ipc = true
fixed-center = false
separator = " "
width = 100%
height = 24
offset-x = 0
offset-y = 0
radius = 0.0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.cyan}

padding = 0
padding-right = 1
module-margin-left = 0
module-margin-right = 1

font-0 = LiberationMono:pixelsize=10;
font-1 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false;
font-2 = FontAwesome:pixelsize=10;

modules-left = bspwm xwindow
modules-right = time

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

format-underline =
format-background =
format-padding =

[module/bspwm]
type = internal/bspwm

enable-scroll = true
label-focused = %name%
label-focused-background = ${colors.black}
label-focused-underline = ${colors.red}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%!
label-urgent-background = ${colors.red}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.white}
label-empty-padding = 2

format-underline =
format-background =
format-padding =

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/time]
type = custom/script
exec = date '+%d/%m/%Y %H:%M'
label = "%output%"
interval = 5
