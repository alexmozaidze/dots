# Reload sxhkd
ctrl + shift + x
	kill -SIGTERM $(pidof sxhkd) && sxhkd

# Launch firefox
ctrl + shift + i
	firefox

# Launch terminal
ctrl + shift + t
	st

# Launch dmenu to run any application
ctrl + shift + d
	dmenu_run

# Make a screenshot
ctrl + shift + s
	scrot

# Open Zathura
ctrl + shift + z
	zathura

# Open GIMP
ctrl + shift + g
	gimp

# Choose emoji using dmenu and copy it in clipboard
ctrl + shift + e
	emacs
