# Reload sxhkd
ctrl + shift + x
	kill -SIGTERM $(pidof sxhkd) && sxhkd

# Launch firefox
ctrl + shift + i
	firefox

# Launch Emacs
ctrl + shift + e
	emacs

# Launch terminal
ctrl + shift + Return
	st

# Launch terminal with Tmux
ctrl + shift + t
	tmux-session-manager

# Launch dmenu to run any application
ctrl + shift + d
	dmenu_run

# Make a screenshot
ctrl + shift + s
	scrot

# Open Zathura
ctrl + shift + z
	zathura

ctrl + shift + b
	timeshift-gtk

# Choose emoji using dmenu and copy it in clipboard
ctrl + shift + u
	emoji
